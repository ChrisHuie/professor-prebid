{
	"name": "Prebid Tools V0.2 (experimental)",
	"version": "2.10",
	"manifest_version": 2,
	"browser_action": {
		"default_popup": "popup.html",
		"default_tile": "Message"
	},
	"background": {
		"scripts": [
			"background.bundle.js"
		],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"run_at": "document_end",
			"js": [
				"contentScript.bundle.js",
				"inject.bundle.js"
			],
			"css": [
				"content.styles.css"
			]
		}
	],
	"web_accessible_resources": [
		"injected.bundle.js",
		"injected.js",
		"content.styles.css",
		"icon-128.png",
		"icon-34.png"
	],
	"incognito": "split",
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"permissions": [
		"webRequest",
		"storage",
		"tabs",
		"*://*/"
	]
}